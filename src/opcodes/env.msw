; ecall, ebreak
; imitate some of the linux syscall interface for shits and giggles

[rv.exec.opcode=28 [
	(#if debug (rv.log "ecall"))
	([rv.syscall. (rv.get_x 17)])
]]

; write
[rv.syscall.64 [
	(rv.mem_get_str (rv.get_x 11) (rv.get_x 12))
	(rv.next)
]]

; exit
[rv.syscall.93 [
	(set pc 0xdeadbee0)
]]